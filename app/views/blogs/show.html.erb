<div class="container">
  <h1> <%=  @blog.title %> </h1>
  <%  @blog.blog_posts.each do |blog_post| %>
    <h1> <%=  blog_post.title %> </h1>
    <%= link_to "more", blog_blog_post_path(blog_post.blog, blog_post), class: "btn btn-primary" %>
  <% end %>

  <%=  link_to "Back", blogs_path, class: "btn btn-primary" %>
  <%=  link_to "Edit", edit_blog_path(@blog), class: "btn btn-danger" %>
</div>
