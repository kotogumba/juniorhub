<div class="outer-frame">
  <div>
    <%=  link_to "+", new_blog_path, class:"new-button" %>
  </div>
  <div class="blog-category-banner">
    <h1>Blog Categories</h1>
  </div>
  <%# Blog category cards with iteration %>
  <div class="blog-category-list">
    <% @categories.each do |category| %>
      <% unless category.blogs == nil %>
        <% category.blogs.each do |blog| %>
          <%= link_to blog_blog_posts_path(blog) do %>
            <div class="blog-category-card">
              <h2><%=  category.name %></h2>
              <h4><%= blog.blog_posts.count %> Posts - # authors</h4>
            </div>
          <% end %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
