<%# DASHBOARD %>
<div class="d-flex align-items-start" id="dashboard" data-controller="new-message">
  <div class="nav flex-column nav-pills me-3" id="v-pills-tab" role="tablist" aria-orientation="vertical">
    <button class="nav-link <%= params[:tab] != 'messages' ? 'active' : nil %>" id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-home" type="button" role="tab" aria-controls="v-pills-home" aria-selected="<%= params[:tab] == 'messages' ? 'true' : 'false' %>"><i class="fa-solid fa-house"></i></button>
    <button class="nav-link" id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-profile" type="button" role="tab" aria-controls="v-pills-profile" aria-selected="false"><i class="fa-regular fa-user"></i></button>
    <button class="nav-link" id="v-pills-requests-tab" data-bs-toggle="pill" data-bs-target="#v-pills-requests" type="button" role="tab" aria-controls="v-pills-requests" aria-selected="false"><i class="fa-solid fa-briefcase"></i></button>
    <button class="nav-link <%= params[:tab] == 'messages' ? 'active' : nil %> position-relative" id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-messages" type="button" role="tab" aria-controls="v-pills-messages" aria-selected="<%= params[:tab] == 'messages' ? 'true' : 'false' %>">
      <i class="fa-solid fa-inbox"></i>
      <% new_messages =  current_user.new_messages.last.nil? ? 0 : current_user.new_messages.last.count  %>
      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger <%= new_messages > 0 ? nil: 'd-none'%>" data-new-message-target="container" >
        <span data-new-message-target="badge" ><%= new_messages %></span>
        <span class="visually-hidden">unread messages</span>
      </span>
    </button>
  </div>
  <div class="tab-content" id="v-pills-tabContent">
    <div class="tab-pane fade <%= params[:tab] != 'messages' ? 'show active' : nil %>" id="v-pills-home" role="tabpanel" aria-labelledby="v-pills-home-tab" tabindex="0">
      <h1>Hello</h1>
      <p> <%= @user.profile.first_name %> ! </p>
    </div>
    <div class="tab-pane fade" id="v-pills-profile" role="tabpanel" aria-labelledby="v-pills-profile-tab" tabindex="0">
      <%= render "/profiles/profile", profile: @user.profile %>
    </div>
    <%# JOB RESPONSE %>
    <div class="tab-pane fade" id="v-pills-requests" role="tabpanel" aria-labelledby="v-pills-requests-tab" tabindex="0">
      <h3> My requests </h3>
      <% @user.job_responses.each do |job_response| %>
        <%= render "jobs/job", job: job_response.job %>
      <% end %>
    </div>
    <%# CHATS TAB with nested TABS %>
    <div class="tab-pane fade <%= params[:tab] == 'messages' ? 'show active' : nil %>" id="v-pills-messages" role="tabpanel" aria-labelledby="v-pills-messages-tab" tabindex="0">
      <%# <h3> My messages </h3> %>
      <%# NEW TABS COMPONENT %>
      <div class="chat-container">
        <div class="d-flex align-items-start">
          <%# chat names %>
          <div class="nav flex-column nav-pills me-3" id="v-pills-tab-chat" role="tablist" aria-orientation="vertical">
            <div class="chat-sidebar">
              <h3>Online users</h3>
              <ul>
                <% if @user.private_chatrooms.empty? %>
                  <button class="nav-link active" id="pills-first-tab" data-bs-toggle="pill" data-bs-target="#pills-first" type="button" role="tab" aria-controls="pills-first" aria-selected="true"><h3> No chats yet </h3></button>
                <% else %>
                  <% @user.private_chatrooms.each do |chatroom| %>
                    <% if chatroom.user_sender_id == @user.id %>
                      <% friend = User.find(chatroom.user_reciever_id) %>
                    <% else %>
                      <% friend = User.find(chatroom.user_sender_id) %>
                    <% end %>
                    <li>
                      <button class="nav-link <%= friend.id == params[:id].to_i ? 'active' : nil %>" data-controller="read-message" data-read-message-target="name" data-read-message-id-value="<%=friend.id%>" data-read-message-private-chatroom-id-value="<%=chatroom.id%>" data-action="read-message#readMessage" id="v-pills-<%=friend.id%>-tab" data-bs-toggle="pill" data-bs-target="#v-pills-<%=friend.id%>" type="button" role="tab" aria-controls="v-pills-<%=friend.id%>" aria-selected="<%= friend.id == params[:id] ? 'true' : 'false' %>"><%= friend.nickname %></button>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>

          <%# chats content %>
          <div class="tab-content" id="v-pills-tabContent-chat">
            <% if @user.private_chatrooms.empty? %>
              <div class="tab-pane fade show active" id="v-pills-first" role="tabpanel" aria-labelledby="v-pills-first-tab" tabindex="0">
                <h3> No chats yet </h3>
              </div>
            <% else %>
              <% @user.private_chatrooms.each do |chatroom| %>
                <% if chatroom.user_sender_id == @user.id %>
                  <% friend = User.find(chatroom.user_reciever_id) %>
                <% else %>
                  <% friend = User.find(chatroom.user_sender_id) %>
                <% end %>
                <div class="tab-pane fade <%= params[:id].to_i == friend.id ? 'show active' : nil %>" id="v-pills-<%=friend.id%>" role="tabpanel" aria-labelledby="v-pills-<%=friend.id%>-tab" tabindex="0">
                  <%= render "private_chatrooms/private_chatroom", private_chatroom: chatroom,  private_message: PrivateMessage.new %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="chat-container">
  <div class="chat-sidebar">
    <h3>Online users</h3>
    <ul>
      <li>User 1</li>
      <li>User 2</li>
      <li>User 3</li>
      <li>User 4</li>
      <li>User 5</li>
    </ul>
  </div>
  <div class="chat-main">
    <div class="chat-header">
      <h3>Chat with a friend</h3>
    </div>
    <div class="chat-messages">
      <div class="message-container">
        <div class="message-sent">
          <p>Hey there! How's it going?</p>
        </div>
        <div class="message-received">
          <p>Good, thanks for asking! What have you been up to?</p>
        </div>
      </div>
    </div>
    <div class="message-form">
      <input type="text" placeholder="Type your message here">
      <button >Send</button>
    </div>
  </div>
</div>
