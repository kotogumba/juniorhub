<%= simple_form_for [@job, @job_response] do |f| %>
  <%= f.error_notification %>
  <%# input with value first name %>
  <%= f.input :first_name, input_html: {value: current_user.profile.first_name} %>
  <%# input with value last name %>
  <%= f.input :last_name, input_html: {value: current_user.profile.last_name} %>
  <%= f.input :cv, as: :file,
              label: "CV",
              required: true,
              input_html: { multiple: false, class:"form-control my-2 p-3" } %>
  <%= f.input :cover_letter, as: :file, label: "Cover letter",
              input_html: { multiple: false, class:"form-control my-2 p-3" } %>
  <%= f.button :submit, "Submit", class:"apply-button"%>
  </div>
<% end %>
