<div class="container d-flex flex-column">
  <% if profile.avatar.attached? %>
    <div class="avatar-profile"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path profile.avatar.key, height: 300, crop: :fill %>'"></div>
  <% end %>
  <%=  profile.first_name %>
  <%=  profile.last_name %>
  <%=  profile.address %>
  <%=  profile.city %>
  <%=  profile.state %>
  <%=  profile.zip_code %>
  <%=  profile.phone_number %>
  <% chat = current_user.find_private_chat(profile.user) %>
  <%# if current_user is user hide %>
  <% if current_user != profile.user %>
    <% if chat.nil? %>
      <%= button_to "Send Message", private_chatrooms_path(user_sender_id: current_user.id, user_reciever_id: profile.user.id), method: :post %>
    <% else %>
      <%= link_to "Send Message", private_chatroom_path(chat) %>
    <% end %>
  <% else %>
    <%= link_to "Edit", edit_profile_path(profile) %>
  <% end %>

</div>
