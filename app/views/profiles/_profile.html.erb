<div class="profile-container">
  <div class="first-row">
    <div class="name">
      <h4>Hello! I am</h4>
      <h2><%=  profile.first_name %> <%=  profile.last_name %></h2>
    </div>
   <% if profile.avatar.attached? %>
    <div class="avatar-profile-custom"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path profile.avatar.key, height: 300, width: 300, crop: :fill %>'"></div>
  <% end %>
  </div>
  <div class="second-row">
    <div class="info 1">
      <p>About me</p>
      <p><%=  profile.bio %></p>
    </div>
    <div class="info 2">
      <p>Position</p>
      <p>Junior Developer at LeWagon</p>
    </div>
    <div class="info 3">
      <p>Location</p>
      <p><%=  profile.city %> <%=  profile.state %></p>
    </div>
  </div>
  <% chat = current_user.find_private_chat(profile.user) %>
  <%# SEND MESSAGE BLOCK %>
  <% if current_user != profile.user %>
    <% if chat.nil? %>
      <%= button_to "Send Message", private_chatrooms_path(user_sender_id: current_user.id, user_reciever_id: profile.user.id), method: :post %>
    <% else %>
      <%= link_to "Send Message", "/dashboard?tab=messages&id=#{profile.user.id}" %>
    <% end %>
  <% else %>
    <%= link_to "Edit", edit_profile_path(profile) %>
  <% end %>

</div>
