
<div class="profile-card">
  <div class="profile-img">
    <% if profile.avatar.attached? %>
      <%= cl_image_tag profile.avatar.key %>
    <% else %>
      <img src="https://via.placeholder.com/150" alt="Profile picture">
    <% end %>
  </div>
  <div class="profile-info">
    <h1> <%= profile.first_name %> <%= profile.last_name %> </h1>
    <h6><%= ["Junior Developer", "Solution Architect", "Software Developer", "Scrum Master", "Product Owner", "Database Engineer", "Front-End Wizard"].sample %></h6>
    <p> <i class="fa-solid fa-location-dot"></i><%= profile.city %></p>
    <%= link_to "View profile", profile_path(profile.user), class: "btn btn-primary" %>
  </div>
</div>
