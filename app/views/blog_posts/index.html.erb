<div class="container">
  <%= link_to "New Post", new_blog_blog_post_path(@blog), class: "btn btn-primary" %>
  <% @blog_posts.each do |blog_post| %>
    <h1> <%=  blog_post.title %> </h1>
    <p> <%=  blog_post.content %> </p>
    <p> <%=  link_to "details", blog_blog_post_path(blog_post.blog, blog_post), class: "btn btn-primary" %> </p>
  <% end %>

  <%=  link_to "Back", blogs_path, class: "btn btn-primary" %>
</div>
