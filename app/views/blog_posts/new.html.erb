<%=  simple_form_for [@blog, @blog_post] do |f| %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%= f.input :categories, as: :check_boxes, collection: Category.all, label: "Categories", include_hidden: false %>
  <%= f.input :image, as: :file %>
  <%= f.button :submit, "Submit", class:"btn1 mt-3 mb-3"%>
<% end %>
